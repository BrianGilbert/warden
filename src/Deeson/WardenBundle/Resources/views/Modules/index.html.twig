{% extends 'DeesonWardenBundle::layout.html.twig' %}

{% block title %}Module Status{% endblock %}

{% block content_header '' %}

{% block content %}

    {% if modules %}

    <table border="1" width="100%">
        <thead>
            <tr>
                <td width="50%">Module</td>
                <td>Number of sites (Site usage)</td>
            </tr>
        </thead>
        <tbody>
        {% for module in modules %}
        <tr>
            <td><a href="{{ path('modules_show', {'projectName': module.getProjectName() }) }}">{{ module.getName() }}</a> ({{ module.getProjectName() }})</td>
            <td>{{ module.getSiteCount() }} ({{ module.getUsagePercentage() }}%)</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    {% else %}

    <p>There are currently no modules registered.</p>

    {% endif %}

{% endblock %}