{% extends 'DeesonWardenBundle::layout.html.twig' %}

{% block title %}View site: {{ site.getUrl() }}{% endblock %}

{% block content_header '' %}

{% block content %}

    <p>Name: {{ site.getName() }}</p>
    <p>URL: {{ site.getUrl() }}</p>
    <p>Core Version: {{ site.getCoreVersion() }}</p>
    <p>Current Core Version: {{ site.getLatestCoreVersion() }} {% if site.compareCoreVersion() %}{% else %}(Currently out of date {% if site.getIsSecurityCoreVersion() %} - SECURITY UPDATE!!!{% endif %}){% endif %}</p>

    {% if modulesRequiringUpdates %}
    <p>Modules Requiring Updates:</p>
    <table border="1" width="100%">
        <thead>
             <tr>
                 <td width="50%">Name</td>
                 <td>Version</td>
                 <td>Latest Version</td>
            </tr>
        </thead>
        <tbody>
        {% for module in modulesRequiringUpdates %}
            <tr class="{% if site.getModuleIsSecurity(module) %}error{% else %}{% if module.version != site.getModuleLatestVersion(module) %}warning{% endif %}{% endif %}">
                <td><a href="{{ path('modules_show', {'projectName': module.name }) }}">{{ module.name }}</a></td>
                <td>{{ module.version }}</td>
                <td>{{ site.getModuleLatestVersion(module) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br />
    <br />
    {% endif %}

    <p>Installed Modules:</p>
    <table border="1" width="100%">
        <thead>
             <tr>
                 <td width="50%">Name</td>
                 <td>Version</td>
                 {#<td>Latest Version (Out of date) [Is Security Update]</td>#}
            </tr>
        </thead>
        <tbody>
        {% for module in site.getModules() %}
            <tr>
                <td><a href="{{ path('modules_show', {'projectName': module.name }) }}">{{ module.name }}</a></td>
                <td>{{ module.version }}</td>
                {#<td>{{ site.getModuleLatestVersion(module) }} ({% if module.version == site.getModuleLatestVersion(module) %}N{% else %}Y{% endif %}) [{% if site.getModuleIsSecurity(module) %}Y{% else %}N{% endif %}]</td>#}
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br />
    <br />

    <a href="{{ path('sites_list') }}"><< Back</a>
    {#<br />
    <br />
    <a href="{{ path('sites_edit', {'id': site.getId() }) }}">EDIT</a>#}

{% endblock %}