{% extends 'DeesonSiteStatusBundle::layout.html.twig' %}

{% block title %}View site: {{ site.getUrl() }}{% endblock %}

{% block content_header '' %}

{% block content %}

    <p>This is a details of a site</p>

    <p>URL: {{ site.getUrl() }}</p>
    <p>Core Version: {{ site.getCoreVersion() }}</p>
    <p>System Status Token: {{ site.getSystemStatusToken() }}</p>
    <p>System Status Encrypt Token: {{ site.getSystemStatusEncryptToken() }}</p>

    <pre>
        {{ status_data }}
    </pre>

    <a href="/sites/{{ site.getId() }}/update-core">Get Core Version</a>
    <br />
    <br />

    <a href="/sites"><< Back</a>
    <br />
    <br />
    <a href="/sites/{{ site.getId() }}/delete">DELETE</a>

{% endblock %}